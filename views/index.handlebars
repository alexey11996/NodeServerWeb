{{#if_eq user "admin"}}
<div class="row">
    <div class="col-sm-6 col-md-4">
        <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#formModal"> Add Animal </button>
        <hr />
        </div>
    </div>
        {{#animal}}
        <div class="row">
            <div class="col-sm-6 col-md-12">
                <div class="thumbnail">
                    <h4>
                        {{a_name}}
                        <br />
                        <br />
                        Description: {{a_descr}}
                        <br />
                        <br />
                        Price: {{a_price}}
                        <a class="btn btn-default pull-right openCurrCat" href="/particularPat?id={{a_id}}">More Info<span class="glyphicon glyphicon-menu-right"></span></a>
                    </h4>
                    
                    <button class="btn btn-default edit-cat" data-toggle="modal" data-target="#editformModal" data-id="{{a_id}}" data-name="{{a_name}}" data-photo="{{a_photo}}" data-description="{{a_descr}}" data-price="{{a_price}}">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                    </button>
                    <button class="btn btn-danger delete-cat" data-id="{{a_id}}">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                    

                  
                </div>
            </div>
        </div>
        {{/animal}}
{{else}}
{{#animal}}
<div class="row">
    <div class="col-sm-6 col-md-12">
        <div class="thumbnail">
            <h4>
                {{a_name}}
                <br />
                <br />
                Description: {{a_descr}}
                <br />
                <br />
                Price: {{a_price}}
                <a class="btn btn-default pull-right openCurrCat" href="/particularPat?id={{a_id}}">More Info<span class="glyphicon glyphicon-menu-right"></span></a>
            </h4>            
        </div>
    </div>
</div>
{{/animal}}
{{/if_eq}}

        <!-- Modal -->
        <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-labelledby="formModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method="post" action="/add">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Add Animal</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Cat Category</label>
                                <select class="form-control" name="category">
                                    <option value="1">Red Hair</option>
                                    <option value="2">Black Hair</option>
                                    <option value="3">Small Citten</option>
                                    <option value="4">Medium Citten</option>
                                    <option value="5">Extra Large Cat</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Cat Name</label>
                                <input type="text" class="form-control" name="name" />
                            </div>
                            <div class="form-group">
                                <label>Cat Photo</label>
                                <input type="text" class="form-control" name="photo" />
                            </div>
                            <div class="form-group">
                                <label>Cat Description</label>
                                <input type="text" class="form-control" name="description" />
                            </div>
                            <div class="form-group">
                                <label>Cat Price</label>
                                <input type="text" class="form-control" name="price" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <!-- Modal Edit-->
        <div class="modal fade" id="editformModal" tabindex="-1" role="dialog" aria-labelledby="EditformModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method="post" action="/edit">
                        <input type="hidden" id="edit-form-id" name="id" />
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Edit Animal</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label>Cat Name</label>
                                <input type="text" class="form-control" name="name" id="edit-form-name" />
                            </div>
                            <div class="form-group">
                                <label>Cat Photo</label>
                                <input type="text" class="form-control" name="photo" id="edit-form-photo" />
                            </div>
                            <div class="form-group">
                                <label>Cat Description</label>
                                <input type="text" class="form-control" name="description" id="edit-form-description" />
                            </div>
                            <div class="form-group">
                                <label>Cat Price</label>
                                <input type="text" class="form-control" name="price" id="edit-form-price" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <input type="submit" class="btn btn-primary" value="Save" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
